        android:layout_height="30dp"
        android:text="New Text"
        android:textAlignment="center"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" />
</RelativeLayout>