<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/b1"
    tools:context="com.example.poornima1.madimap2.search">

    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/search"
        android:src="@drawable/searchicon2"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </android.support.v7.widget.ButtonBarLayout>

    <android.support.v4.widget.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/searchbox"
        android:id="@+id/view"
        android:layout_alignTop="@+id/search"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <android.support.v7.widget.AppCompatAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchbox"
        android:hint="Search Medicine"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button"
        android:background="@drawable/searchicon2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/search"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search" />

</RelativeLayout>
